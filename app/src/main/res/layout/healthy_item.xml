<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#E07086"
    android:layout_margin="@dimen/space_10dp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:id="@+id/rtl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E07086"
        android:orientation="vertical"
        android:padding="@dimen/space_10dp">

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="@dimen/space_30dp"
            android:layout_height="@dimen/space_30dp" />

        <TextView
            android:id="@+id/tv_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20dp"
            android:layout_toRightOf="@+id/iv_type"
            android:text="血压"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_3dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/space_3dp"
            android:layout_toRightOf="@+id/tv_pressure"
            android:text="mmHg"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_type"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginTop="@dimen/space_3dp"
            android:text="数据来源:--" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_below="@+id/tv_source"
            android:layout_marginTop="@dimen/space_1dp"
            android:text="测量时间:--" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="--/--"
            android:layout_marginRight="@dimen/space_10dp"
            android:textSize="36sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>