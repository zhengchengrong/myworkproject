<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_zhibo_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100">
<ImageView
    android:id="@+id/iv_zhibo_pic"
    android:layout_width="@dimen/dp_110"
    android:layout_height="@dimen/dp_75"
    android:scaleType="fitXY"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_8"
  />

    <TextView
        android:id="@+id/tv_zhibo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title01"
        android:textSize="@dimen/sp_14"
        android:layout_toRightOf="@+id/iv_zhibo_pic"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
 />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_zhibo_pic"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_16"
        >
    <TextView
        android:id="@+id/tv_zhibo_athuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title02"
        android:textSize="@dimen/sp_13"
        android:layout_marginBottom="@dimen/dp_2"
         />
        <TextView
            android:id="@+id/tv_zhibo_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title03"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>

</RelativeLayout>