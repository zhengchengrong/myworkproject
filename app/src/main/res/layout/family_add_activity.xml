<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />


    <RelativeLayout
        android:id="@+id/relative_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="end"
            android:hint="请输入手机号"
            android:paddingRight="@dimen/space_20dp"
            android:textSize="@dimen/text_14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_relation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/space_10dp"
            android:text="成员关系"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:padding="@dimen/space_5dp"
            android:hint="请选择"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/space_5dp"
            android:background="@mipmap/ic_toright" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginTop="@dimen/space_10dp"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/space_10dp"
            android:text="验证码"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:layout_toLeftOf="@+id/btn_code"
            android:background="@drawable/shape_gray_side"
            android:inputType="number"
            android:minEms="6"
            android:padding="@dimen/space_5dp"
            android:textSize="@dimen/text_14sp" />

        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:background="@drawable/shape_time_solid5"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rtl_avager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/space_5dp"
            android:text="头像"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />

        <com.eaphone.g08android.widget.CircleImageView
            android:id="@+id/iv_avager"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:src="@mipmap/ic_default" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/space_10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:background="@null"
            android:hint="请输入姓名"
            android:padding="@dimen/space_5dp"
            android:textSize="@dimen/text_14sp" />

        <TextView style="@style/setting_tv_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="身份证号"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />

        <ImageView
            android:id="@+id/iv_why"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_toRightOf="@+id/tv_card"
            android:src="@mipmap/ic_warn" />

        <EditText
            android:id="@+id/edt_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:background="@null"
            android:hint="请输入身份证号"
            android:padding="@dimen/space_5dp"
            android:textSize="@dimen/text_14sp" />

        <TextView style="@style/setting_tv_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:padding="@dimen/space_5dp"
            android:textSize="@dimen/text_14sp" />

        <TextView style="@style/setting_tv_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/space_10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="出生日期"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_10dp"
            android:padding="@dimen/space_5dp"
            android:textSize="@dimen/text_14sp" />

        <TextView style="@style/setting_tv_icon" />
    </RelativeLayout>


</LinearLayout>