<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eaphone.g08android.ui.personcenter.DeviceDetailActivity">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/include_bar"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="180dp" />
            <EditText
                android:id="@+id/edt_name"
                android:background="@null"
                android:minEms="8"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_16sp"
                android:padding="@dimen/space_10dp"
                android:layout_below="@+id/iv_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_rename"
                android:src="@mipmap/ic_rename"
                android:layout_below="@+id/iv_bg"
                android:padding="@dimen/space_10dp"
                android:layout_toRightOf="@+id/edt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



        <TextView
            android:id="@+id/tv_bind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40dp"

            android:background="@color/white"
            android:drawableRight="@mipmap/ic_toright"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_10dp"
            android:paddingRight="@dimen/space_10dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:text="绑定成员"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />
        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40dp"
            android:layout_marginTop="@dimen/space_1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_toright"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_10dp"
            android:paddingRight="@dimen/space_10dp"
            android:text="重置wifi"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40dp"
            android:layout_marginTop="@dimen/space_1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_toright"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_10dp"
            android:paddingRight="@dimen/space_10dp"
            android:text="操作指南"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_unbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_20dp"
        android:layout_marginLeft="@dimen/space_10dp"
        android:layout_marginRight="@dimen/space_10dp"
        android:background="@drawable/app_btn_bg"
        android:text="解除绑定"
        android:textColor="@color/white" />
</LinearLayout>
