<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_titlebar"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10dp"
                android:gravity="center"
                android:text="账　　号："
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:editable="false"
                android:text=""
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10dp"
                android:gravity="center"
                android:text="登录密码："
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="填写当前登录密码"
                android:inputType="textPassword"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:text=""
            android:textColor="@color/md_red_500" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10dp"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_marginTop="20dp"
            android:text="请重新设置登录密码"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/text_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10dp"
                android:gravity="center"
                android:text="设置密码："
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/et_setpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="密码由6-20位字母、数字或符号组成"
                android:inputType="textPassword"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_10dp"
                android:gravity="center"
                android:text="确认密码："
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/et_surepwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="再次填写密码"
                android:inputType="textPassword"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_20dp"
        android:layout_marginLeft="@dimen/space_10dp"
        android:layout_marginRight="@dimen/space_10dp"
        android:background="@drawable/app_btn_bg"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14sp" />

</RelativeLayout>