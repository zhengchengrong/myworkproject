<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eaphone.g08android.ui.info.InfoReplyActivity">

    <include layout="@layout/include_titlebar" />

    <EditText
        android:id="@+id/edt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="start"
        android:hint="评论一下"
        android:lineSpacingExtra="@dimen/space_2dp"
        android:minLines="10"
        android:padding="@dimen/space_10dp"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/text_14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10dp"
            android:layout_marginLeft="@dimen/space_20dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:background="@drawable/shape_gray_side5"
            android:paddingBottom="@dimen/space_5dp"
            android:paddingLeft="@dimen/space_10dp"
            android:paddingRight="@dimen/space_10dp"
            android:paddingTop="@dimen/space_5dp"
            android:text="取消"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:text="/140"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tv_count"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_20dp"
            android:layout_marginTop="@dimen/space_10dp"
            android:background="@drawable/app_btn_bg"
            android:paddingBottom="@dimen/space_5dp"
            android:paddingLeft="@dimen/space_10dp"
            android:paddingRight="@dimen/space_10dp"
            android:paddingTop="@dimen/space_5dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp" />
    </RelativeLayout>
</LinearLayout>
