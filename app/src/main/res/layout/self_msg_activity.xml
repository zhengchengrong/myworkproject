<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eaphone.g08android.ui.personcenter.SelfMsgActivity">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:id="@+id/linea_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.eaphone.g08android.widget.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/space_60dp"
                android:layout_height="@dimen/space_60dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_10dp"
                android:src="@mipmap/ic_default" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/space_10dp"
                android:layout_marginTop="@dimen/space_10dp"
                android:src="@mipmap/ic_pictrue" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10dp"
                android:text="姓名"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="end"
                android:hint="请填写真实姓名"
                android:paddingRight="@dimen/space_20dp"
                android:textSize="@dimen/text_14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10dp"
                android:text="手机号"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/space_20dp"
                android:textSize="@dimen/text_14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10dp"
                android:text="身份证"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <ImageView
                android:id="@+id/iv_why"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_card"
                android:src="@mipmap/ic_warn" />

            <EditText
                android:id="@+id/edt_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="请输入真实身份证号"
                android:paddingRight="@dimen/space_20dp"
                android:textSize="@dimen/text_14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10dp"
                android:text="性别"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_20dp"
                android:textSize="@dimen/text_14sp" />

            <TextView style="@style/setting_tv_icon" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10dp"
                android:text="年龄"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/space_20dp"
                android:textSize="@dimen/text_14sp" />

            <TextView style="@style/setting_tv_icon" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>