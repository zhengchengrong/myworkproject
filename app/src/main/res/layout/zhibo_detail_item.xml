<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_zhibo_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75"
    android:background="@color/white"
    >
<ImageView
    android:id="@+id/iv_play_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/zhibo_play_logo"
    android:scaleType="fitXY"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/dp_12"
    />
<TextView
    android:id="@+id/iv_play_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="方法：一万次实验法则"
    android:layout_toRightOf="@+id/iv_play_item"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_8"
    android:textSize="@dimen/sp_16"
    />
    <TextView
        android:id="@+id/iv_play_small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时长2:36"
        android:layout_toRightOf="@+id/iv_play_item"
        android:layout_below="@+id/iv_play_title"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_8"
        />
    <TextView
        android:id="@+id/iv_play_small_jindu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:layout_toRightOf="@+id/iv_play_small_title"
        android:layout_below="@+id/iv_play_title"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_8"

        />
    <ImageView
        android:id="@+id/iv_zhibo_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhibo_download"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_zhibo_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhibo_detail_text"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        />
</RelativeLayout>